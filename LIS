#include<iostream>
using namespace std;

int LIS(int *A, int len)
{
	int *L = new int[len];
	for (int i = 0; i < len; ++i)
	{
		L[i] = 1;
		for (int j = 0; j < i; ++j)
		{
			if (A[j] < A[i] && L[j] + 1 > L[i])
				L[i] = L[j] + 1;
		}
	}
	int Max = 0;
	for (int i = 0; i < len; ++i)
	{
		if (L[i] > Max)
			Max = L[i];
	}
	delete[] L;
	return Max;
}

int main()
{
	int A[] = { 1, -1, 2, -3, 4, -5, 6, -7 };
	cout << LIS(A, sizeof(A) / sizeof(int)) << endl;
	system("pause");
}
